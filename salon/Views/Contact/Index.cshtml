@{
    ViewData["Title"] = "Contact";
}
<div class="contact-container">

    <h1 class="page-title">Contact Us</h1>

    <p class="description">
        We’d love to hear from you! Whether you have a question about our services,
        need help with your booking, or want to share feedback, our team is here to assist you.
    </p>

    <div class="contact-content">

        <!-- LEFT SIDE BOXES -->
        <div class="contact-info">

            <div class="info-box">
                <i class="fa-solid fa-phone"></i>
                <span>+64 912 123 4567</span>
            </div>

            <div class="info-box">
                <i class="fa-solid fa-location-dot"></i>
                <span>123 Queen Street, Auckland,<br />New Zealand</span>
            </div>

            <div class="info-box">
                <i class="fa-solid fa-envelope"></i>
                <span>info@glamourgrace.co.nz</span>
            </div>

            <div class="info-box large">
                <i class="fa-solid fa-clock"></i>
                <div>
                    <strong>Opening Hours</strong><br />
                    Monday - Friday 9:00am to 7:00pm <br />
                    Saturday 9:00am to 5:00pm <br />
                    Sunday - Closed
                </div>
            </div>
        </div>

        <!-- RIGHT SIDE IMAGE -->
        <div class="contact-image">
            <img src="/Images/contact-salon.webp" alt="Reception" />
        </div>

    </div>
</div>
