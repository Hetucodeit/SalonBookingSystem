@{
    ViewBag.Title = "Checkout";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<h1>Customer Details</h1>

<div class="customer-container p-4">

    <form asp-controller="Order" asp-action="Confirm" method="post">

        <!-- Customer Name -->
        <div class="mb-3">
            <label class="form-label fw-bold">Full Name</label>
            <input type="text" name="FullName" class="form-control" required />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label class="form-label fw-bold">Email Address</label>
            <input type="email" name="Email" class="form-control" required />
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label class="form-label fw-bold">Address</label>
            <textarea name="Address" class="form-control" rows="3" required></textarea>
        </div>

        <!-- Payment Method -->
        <div class="mb-3">
            <label class="form-label fw-bold">Payment Method</label>
            <select name="PaymentMethod" class="form-select" required>
                <option value="">-- Select Payment Method --</option>
                <option>Cash</option>
                <option>Credit/Debit Card</option>
                <option>Internet Banking</option>
                <option>EFTPOS</option>
            </select>
        </div>

        <!-- Continue Button -->
        <div class="d-flex justify-content-end mt-4">
            <button type="button" class="btn btn-success" onclick="showSuccessModal()">
                Checkout
            </button>
        </div>

        <!-- Confirmation Popup Modal -->
        <div class="modal fade" id="orderSuccessModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content p-4 text-center">

                    <!-- GREEN TICK ICON -->
                    <div>
                        <i class="bi bi-check-circle-fill" style="font-size: 70px; color: green;"></i>
                    </div>

                    <h4 class="mt-3 fw-bold">Thank You for Your Confirmation</h4>
                    <p class="text-muted">Your order is successfully completed.</p>

                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-outline-secondary" asp-controller="Cart" asp-action="Cart">Back</a>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>

<script>
    function showSuccessModal() {
        var modal = new bootstrap.Modal(document.getElementById('orderSuccessModal'));
        modal.show();
    }
</script>
