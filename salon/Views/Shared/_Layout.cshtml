<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - salon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/salon.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex align-items-center justify-content-between">

                @if (ViewBag.ShowHeaderItem == true)
                {
                    <!-- LOGO LEFT -->
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Salon Logo" style="height:100px;" class="me-3" />
                    </a>
                }

                <!-- CENTER MENU -->
                <ul class="navbar-nav mx-auto d-flex flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Product" asp-action="BrowseProduct">Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Promotions" asp-action="Index">Promotions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Cart">Cart</a>
                    </li>
                </ul>

                @if (ViewBag.ShowHeaderItem == true)
                {
                    <!-- STAFF LOGIN RIGHT -->
                    <a class="staff-login-btn ms-3" asp-controller="Staff" asp-action="Login">
                        Staff Login
                    </a>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - salon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
